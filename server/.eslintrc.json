{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
				"plugin:nestjs/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
				"nestjs"
    ],
    "rules": {
        "indent": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-multiple-empty-lines": [
            "error", {
                "max": 1,
                "maxEOF": 0,
                "maxBOF": 0
            }
        ],
        "no-trailing-spaces": "error"
        // "padding-line-between-statements": [
        //     "error",
        //     { "blankLine": "never", "prev": "function", "next": "*"}
        // ]
    }
}